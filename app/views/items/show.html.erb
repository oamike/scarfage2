    </tr>
    <% end %>
    <% unless @item.team_list.empty? %>
    <tr>
      <td>Team:</td>
      <td><%= @item.team_list %></td>
    </tr>
    <% end %>
    <% unless @item.dated_list.empty? %>
    <tr>
      <td>Dated:</td>
      <td><%= @item.dated_list %></td>
    </tr>
    <% end %>
    <% unless @item.source_list.empty? %>
    <tr>
      <td>Source:</td>
      <td><%= @item.source_list %></td>
    </tr>
    <% end %>
    <% unless @item.designer_list.empty? %>
    <tr>
      <td>Designer:</td>
      <td><%= @item.designer_list %></td>
    </tr>
    <% end %>
    <% unless @item.group_list.empty? %>
