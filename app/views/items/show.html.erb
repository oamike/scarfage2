<p id="notice"><%= notice %></p>

<h1><%= link_to "Scarfdom", root_path %></h1>

  <table class="item-header">
    <tbody>
    <tr>
      <td>
      <ul class="notification-badges" >
        <span class="scarf-name" >
          <%= @item.name    %>
        </span>
        <% if num_owned = own_count(@item) %>
          <li data-badge=<%= num_owned %> >own</li>
        <% end %>
        <% if trade = trade(@item) %>
          <li >trade</li>
        <% end %>
        <% if want = want(@item) %>
          <li>want</li>
        <% end %>
        <% if hide = hide(@item) %>
          <li>hide</li>
        <% end %>
        <li><%= link_to 'Edit', edit_item_path(@item), {class: "edit-button"} %></li>
      </ul>
      </td>
    </tr>
    </tbody>
  </table>


  <table>
    <tbody>
      <% @item.images.each do |image| %>
        <tr>
          <td><%= image_tag(image.image_url, alt: image.name, class: 'scarfimage') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<p>
  <strong>Description</strong></p>
<p>
  <%= @item.body %></p>


<p>
  <strong>Tags</strong></p>

<table>
  <tbody>
    <% unless @item.sport_list.empty? %>
